<% content_for :title, "Buscar Clima" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
              <i class="fas fa-cloud-sun"></i> Buscar Clima por CEP
            </h2>
            <div class="user-info">
              <span class="badge bg-primary">
                <i class="fas fa-user"></i> <%= current_user.email %>
              </span>
              <%= link_to "Relatórios", reports_path,
                          class: "btn btn-outline-info btn-sm ms-2" %>
              <%= link_to "Sair", destroy_user_session_path, method: :delete,
                                                             class: "btn btn-outline-secondary btn-sm ms-2" %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <%= form_with url: search_weathers_path, method: :get, local: true, class: "mb-4" do |form| %>
            <div class="input-group">
              <%= form.text_field :zipcode,
                                  placeholder: "Digite o CEP (ex: 01310-100)",
                                  class: "form-control form-control-lg",
                                  required: true,
                                  pattern: "[0-9]{5}-?[0-9]{3}",
                                  title: "Digite um CEP válido (ex: 01310-100)" %>
              <button class="btn btn-primary btn-lg" type="submit">
                <i class="fas fa-search"></i> Buscar
              </button>
            </div>
            <small class="form-text text-muted">
              Digite um CEP brasileiro válido para buscar informações do clima
            </small>
          <% end %>

          <% if @weather_data %>
            <div class="weather-result">
              <% if @weather_data[:error] %>
                <div class="alert alert-danger">
                  <i class="fas fa-exclamation-triangle"></i>
                  <%= @weather_data[:error] %>
                </div>
              <% else %>
                <div class="card bg-light">
                  <div class="card-body">
                    <h4 class="card-title">
                      <i class="fas fa-map-marker-alt"></i> 
                      Clima para CEP: <%= params[:zipcode] %>
                    </h4>
                    
                    <div class="row">
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h5><i class="fas fa-thermometer-half"></i> Temperatura Atual</h5>
                          <p class="display-4 text-primary">
                            <%= @weather_data[:temperature] %>°C
                          </p>
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h5><i class="fas fa-cloud"></i> Condições</h5>
                          <p class="h4 text-capitalize">
                            <%= @weather_data[:description] %>
                          </p>
                        </div>
                      </div>
                    </div>
                    
                    <div class="row mt-3">
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h6><i class="fas fa-arrow-up"></i> Temperatura Máxima</h6>
                          <p class="h5 text-danger">
                            <%= @weather_data[:temp_max] %>°C
                          </p>
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h6><i class="fas fa-arrow-down"></i> Temperatura Mínima</h6>
                          <p class="h5 text-info">
                            <%= @weather_data[:temp_min] %>°C
                          </p>
                        </div>
                      </div>
                    </div>

                    <% if @weather_data[:from_database] %>
                      <div class="alert alert-info mt-3">
                        <i class="fas fa-database"></i>
                        <small>Dados obtidos do banco de dados (API indisponível)</small>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Histórico de buscas do usuário -->
          <div class="mt-5">
            <h5><i class="fas fa-history"></i> Suas Buscas Recentes</h5>
            <% user_weathers = Weather.where(user_id: current_user.id).order(created_at: :desc).limit(5) %>
            <% if user_weathers.any? %>
              <div class="row">
                <% user_weathers.each do |weather| %>
                  <div class="col-md-6 mb-3">
                    <div class="card bg-light">
                      <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-center">
                          <div>
                            <h6 class="mb-1">CEP: <%= weather.zip %></h6>
                            <small class="text-muted">
                              <%= weather.temperature %>°C - <%= weather.description %>
                            </small>
                          </div>
                          <small class="text-muted">
                            <%= time_ago_in_words(weather.created_at) %> atrás
                          </small>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                Você ainda não fez nenhuma busca. Digite um CEP acima para começar!
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.weather-result {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.weather-info {
  text-align: center;
  padding: 1rem;
}

.card {
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  border: none;
}

.btn-primary {
  background: linear-gradient(45deg, #007bff, #0056b3);
  border: none;
}

.btn-primary:hover {
  background: linear-gradient(45deg, #0056b3, #004085);
  transform: translateY(-1px);
}
</style>
