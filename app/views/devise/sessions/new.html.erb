<% content_for :title, "Entrar" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
          <h3 class="mb-0">
            <i class="fas fa-sign-in-alt me-2"></i>
            Entrar
          </h3>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                                 html: { class: "needs-validation", novalidate: true }) do |f| %>
            
            <div class="mb-3">
              <%= f.label :email, class: "form-label" do %>
                <i class="fas fa-envelope me-1"></i>
                Email
              <% end %>
              <%= f.email_field :email,
                                autofocus: true,
                                autocomplete: "email",
                                class: "form-control form-control-lg",
                                placeholder: "seu@email.com",
                                required: true %>
              <div class="invalid-feedback">
                Por favor, insira um email válido.
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" do %>
                <i class="fas fa-lock me-1"></i>
                Senha
              <% end %>
              <%= f.password_field :password,
                                   autocomplete: "current-password",
                                   class: "form-control form-control-lg",
                                   placeholder: "Sua senha",
                                   required: true %>
              <div class="invalid-feedback">
                Por favor, insira sua senha.
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Entrar", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-2">Não tem uma conta?</p>
            <%= link_to "Cadastrar-se", new_user_registration_path,
                        class: "btn btn-outline-primary" %>
          </div>

          <div class="text-center mt-3">
            <%= link_to "Esqueceu sua senha?", new_user_password_path,
                        class: "text-decoration-none" %>
          </div>
        </div>
      </div>

      <!-- Demo Credentials -->
      <div class="card mt-4">
        <div class="card-header bg-info text-white">
          <h6 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>
            Credenciais de Teste
          </h6>
        </div>
        <div class="card-body">
          <p class="small mb-2">
            <strong>Web User:</strong><br>
            Email: <code>web@weather.com</code><br>
            Senha: <code>password123</code>
          </p>
          <p class="small mb-0">
            <strong>Admin User:</strong><br>
            Email: <code>admin@weather.com</code><br>
            Senha: <code>admin123</code>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
