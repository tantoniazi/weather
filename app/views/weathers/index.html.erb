<% content_for :title, "Buscar Clima" %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">
            <i class="fas fa-cloud-sun me-2"></i> 
            Buscar Clima por CEP
          </h2>
          <p class="mb-0 mt-2 opacity-75">
            Digite um CEP brasileiro para consultar as condições climáticas
          </p>
        </div>
        <div class="card-body">
          <%= form_with url: search_weathers_path, method: :get, local: true, class: "mb-4" do |form| %>
            <div class="input-group">
              <%= form.text_field :zipcode,
                                  placeholder: "Digite o CEP (ex: 01310-100)",
                                  class: "form-control form-control-lg",
                                  required: true,
                                  pattern: "[0-9]{5}-?[0-9]{3}",
                                  title: "Digite um CEP válido (ex: 01310-100)" %>
              <button class="btn btn-primary btn-lg" type="submit">
                <i class="fas fa-search"></i> Buscar
              </button>
            </div>
            <small class="form-text text-muted">
              Digite um CEP brasileiro válido para buscar informações do clima
            </small>
          <% end %>

          <% if @weather_data %>
            <div class="weather-result">
              <% if @weather_data[:error] %>
                <div class="alert alert-danger">
                  <i class="fas fa-exclamation-triangle"></i>
                  <%= @weather_data[:error] %>
                </div>
              <% else %>
                <div class="card bg-light">
                  <div class="card-body">
                    <h4 class="card-title">
                      <i class="fas fa-map-marker-alt"></i> 
                      Clima para CEP: <%= params[:zipcode] %>
                      <% if @weather_data[:from_cache] %>
                        <span class="badge bg-success">Cache</span>
                      <% elsif @weather_data[:from_database] %>
                        <span class="badge bg-warning">Banco de Dados</span>
                      <% end %>
                    </h4>
                    
                    <div class="row">
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h5><i class="fas fa-thermometer-half"></i> Temperatura Atual</h5>
                          <p class="display-4 text-primary">
                            <%= @weather_data[:temperature] %>°C
                          </p>
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h5><i class="fas fa-cloud"></i> Condições</h5>
                          <p class="h4 text-capitalize">
                            <%= @weather_data[:description] %>
                          </p>
                        </div>
                      </div>
                    </div>
                    
                    <div class="row mt-3">
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h6><i class="fas fa-arrow-up"></i> Temperatura Máxima</h6>
                          <p class="h5 text-danger">
                            <%= @weather_data[:temp_max] %>°C
                          </p>
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <div class="weather-info">
                          <h6><i class="fas fa-arrow-down"></i> Temperatura Mínima</h6>
                          <p class="h5 text-info">
                            <%= @weather_data[:temp_min] %>°C
                          </p>
                        </div>
                      </div>
                    </div>

                    <% if @weather_data[:from_database] %>
                      <div class="alert alert-info mt-3">
                        <i class="fas fa-database"></i>
                        <small>Dados obtidos do banco de dados (API indisponível)</small>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Histórico de buscas do usuário -->
          <div class="mt-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5><i class="fas fa-history"></i> Todas as Suas Consultas</h5>
              <span class="badge bg-primary">
                Total: <%= @weathers.total_count %> consultas
              </span>
            </div>
            
            <% if @weathers.any? %>
              <div class="row">
                <% @weathers.each do |weather| %>
                  <div class="col-lg-6 mb-3">
                    <div class="card bg-light h-100">
                      <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                          <div>
                            <h6 class="mb-1">
                              <i class="fas fa-map-marker-alt text-primary me-1"></i>
                              CEP: <%= weather.zip_code %>                         
                            </h6>
                            <div class="d-flex align-items-center mb-2">
                              <span class="h5 text-primary me-2">
                                <%= weather.temperature %>°C
                              </span>
                              <span class="text-capitalize text-muted">
                                <%= weather.description %>
                              </span>
                            </div>
                          </div>
                          <div class="text-end">
                            <small class="text-muted d-block">
                              <%= time_ago_in_words(weather.created_at) %> atrás
                            </small>
                            <small class="text-muted">
                              <%= weather.created_at.strftime("%d/%m/%Y %H:%M") %>
                            </small>
                          </div>
                        </div>
                        
                        <div class="row text-center">
                          <div class="col-6">
                            <small class="text-muted d-block">Mínima</small>
                            <span class="text-info fw-bold"><%= weather.temp_min %>°C</span>
                          </div>
                          <div class="col-6">
                            <small class="text-muted d-block">Máxima</small>
                            <span class="text-danger fw-bold"><%= weather.temp_max %>°C</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Paginação -->
              <div class="d-flex justify-content-center mt-4">
                <%= paginate @weathers %>
              </div>
            <% else %>
              <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h6>Nenhuma consulta encontrada</h6>
                <p class="mb-0">Você ainda não fez nenhuma busca. Digite um CEP acima para começar!</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.weather-result {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.weather-info {
  text-align: center;
  padding: 1rem;
}

.card {
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  border: none;
}

.btn-primary {
  background: linear-gradient(45deg, #007bff, #0056b3);
  border: none;
}

.btn-primary:hover {
  background: linear-gradient(45deg, #0056b3, #004085);
  transform: translateY(-1px);
}
</style>
